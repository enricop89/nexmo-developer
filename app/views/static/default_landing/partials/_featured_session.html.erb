<% if local_assigns['featured'] %>
  
  <div class="Vlt-card Vlt-card--clickable Vlt-card--border">
    <div class="Vlt-card__image" style="background: #33aaee;">
        <div class="Vlt-card__image__icon">
            <svg class="Vlt-blue"><use xlink:href="/symbol/volta-icons.svg#Vlt-icon-video"></use></svg>
        </div>
    </div>
    <div class="Vlt-card__header Vlt-center">
      <h3 class="Vlt-title--icon Vlt-title--center">
        <svg class="Vlt-orange Vlt-icon"><use xlink:href="/symbol/volta-icons.svg#Vlt-icon-star-full"></use></svg>
        &nbsp;Featured Video&nbsp;
        <svg class="Vlt-orange Vlt-icon"><use xlink:href="/symbol/volta-icons.svg#Vlt-icon-star-full"></use></svg>
      </h2>
    </div>
    <div class="Vlt-grid Vlt-grid--middle">
      <div class="Vlt-col">
        <div class="video">
          <iframe src="<%= video_embed_url(local_assigns['featured']['video_url']) %>" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        </div>
        <h4><%= local_assigns['featured']['title'] %></h4>
      </div>
    </div>
  </div>
<% end %>